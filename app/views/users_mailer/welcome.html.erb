<% content_for :table_params, raw('itemprop="action" itemscope itemtype="http://schema.org/ViewAction"') %>
	<%= content_for :pretext, "Finish setting up your page to get started with Apply to Date" %>

		<tr>
			<td class="content-wrap">
				<meta itemprop="name" content="Edit your page" />
				<table width="100%" cellpadding="0" cellspacing="0">
					<tr>
						<td class="content-block aligncenter">
							<%= image_tag "email/welcome/animatedlogo.gif", width: "56", alt: "", border: "" %>
								<h1 class="aligncenter">Welcome to Apply to Date!</h1>
								<p class="alignleft">We're excited to help you go on better dates with more
									<%= @preferred_gender %>. Here's a quick guide on how to get started.</p>
						</td>
					</tr>

					<tr>
						<td class="content-block">
							<h2>1. Fill out your page</h2>

