<% if @profile.contact_method_value.present? %>
	<%= pretext("You should #{@button_label} – #{@profile.contact_method_value}. #{@profile.sections.values.first}") %>
<% else %>
	<%= pretext(@profile.sections.values.first) %>
<% end %>

<tr>
	<td class="content-wrap">
		<table width="100%" cellpadding="0" cellspacing="0">
			<tr>
				<td class="content-block aligncenter">
					<a class="link-container" href="<%= raw @profile_url %>">
						<%= image_tag @profile.photos.first, alt: @profile.name, class: "circle-image circle-image--title" %>

							<h1>
								<%= short_profile_name(@profile) %> wants to go on a date with you</h1>
					</a>
				</td>
			</tr>

			<% if @profile.contact_method_value.present? %>
				<tr>
					<td class="content-block aligncenter">
						<p>You should
							<%= @button_label %> –
								<%= @profile.contact_method_value %>
						</p>
					</td>
				</tr>
				<tr>
					<td class="content-block aligncenter">
						<% if @profile.contact_via_phone? %>
							<h2><%= @profile.contact_method_value %></h2>
						<% else %>
								<a class="btn-primary" href="<%= raw @profile.contact_method_value %>">
									<%= @button_label %>
										on
										<%= @profile.recommended_contact_method %>
								</a>
								<% end %>

					</td>
				</tr>
				<tr>
					<td class="content-block aligncenter">

						<a class="btn-secondary" href="<%= raw @profile_url %>">View
							<%= @profile.name.possessive %> page</a>


					</td>
				</tr>
				<% else %>
					<tr>
						<td class="content-block aligncenter">

							<a class="btn-primary" href="<%= raw @profile_url %>">View
								<%= @profile.name.possessive %> page</a>
						</td>
					</tr>
					<% end %>


		</table>
	</td>
</tr>